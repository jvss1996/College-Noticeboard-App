<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gecb.gecbbikaner.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#ffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/ecbbanner"
        android:id="@+id/topper"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/cover"
        android:layout_below="@id/topper"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/notice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notice Board"
        android:layout_marginBottom="65dp"
        android:layout_above="@+id/banner"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/notice1"
        android:background="#E3F2FD"
        android:textColor="#0D47A1"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:onClick="payfee"
        android:src="@drawable/payfee_banner"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/banner"/>

</RelativeLayout>
